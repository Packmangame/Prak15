<Window x:Class="Prakt15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Магазин электроники"
        Height="700"
        Width="1200"
        Background="#dfeaeb"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#00C4B4" Padding="10" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnVisitor" 
                        Content="Войти как посетитель" 
                        Background="White"
                        Foreground="#00C4B4"
                        FontWeight="Bold"
                        Margin="0,0,10,0"
                        Padding="15,5"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnVisitor_Click"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtPinCode" 
                             Width="120"
                             FontSize="14"
                             Padding="5"
                             Margin="0,0,10,0"
                             BorderBrush="#00b4c4"
                             BorderThickness="1"/>
                    <Button x:Name="btnManager" 
                            Content="Войти как менеджер" 
                            Background="#00b4c4"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="15,5"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnManager_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Frame x:Name="mainFrame" 
               Margin="10" 
               NavigationUIVisibility="Hidden"
               Grid.Row="1"/>
    </Grid>
</Window>