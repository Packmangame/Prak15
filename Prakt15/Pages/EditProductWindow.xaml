<Window x:Class="Prakt15.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара"
        Height="730"
        Width="549"
        Background="#dfeaeb"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#00C4B4" 
                Padding="10"
                CornerRadius="5">
            <TextBlock Text="Информация о товаре" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" 
                Background="White" 
                Padding="15"
                Margin="0,10,0,0"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Название:"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="txtName"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Описание:"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="txtDescription"
                         Height="60"
                         FontSize="14"
                         TextWrapping="Wrap"
                         Margin="0,0,0,5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Цена:"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         x:Name="txtPrice"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,5"
                        />

                <Label Grid.Row="3" Grid.Column="0" Content="Количество:"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         x:Name="txtStock"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,5"
                         />

                <Label Grid.Row="4" Grid.Column="0" Content="Рейтинг:"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         x:Name="txtRating"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,5"
                         />

                <Label Grid.Row="5" Grid.Column="0" Content="Дата создания:"/>
                <TextBox Grid.Row="5" Grid.Column="1" 
                         x:Name="txtCreatedAt"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,0,5"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Категория:"/>
                <ComboBox Grid.Row="6" Grid.Column="1" 
                          x:Name="cmbCategory"
                          Height="30"
                          FontSize="14"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,5"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Бренд:"/>
                <ComboBox Grid.Row="7" Grid.Column="1" 
                          x:Name="cmbBrand"
                          Height="30"
                          FontSize="14"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,10"/>

                <Label Grid.Row="8" Grid.Column="0" Content="Теги:"/>
                <ListBox Grid.Row="8" Grid.Column="1" 
                         x:Name="lstTags"
                         DisplayMemberPath="Name"
                         Height="80"
                         FontSize="14"
                         SelectionMode="Multiple">          
                </ListBox>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button x:Name="btnSave" 
                    Content="Сохранить"
                    Background="#00C4B4"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" 
                    Content="Отмена"
                    Background="#00b4c4"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="120"
                    Height="40"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>