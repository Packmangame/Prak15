<Page x:Class="Prakt15.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Менеджер"
      Background="#dfeaeb" Width="1069">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5"
                Padding="15"
                Margin="0,0,5,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Label Foreground="#333333" FontWeight="Bold">Поиск товара</Label>
                    <TextBox x:Name="txtSearch"
                             Height="35"
                             FontSize="14"
                             Padding="5"
                             Background="White"
                             BorderBrush="#00C4B4"
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             TextChanged="TxtSearch_TextChanged"
                             KeyDown="TxtSearch_PreviewKeyDown"/>

                    <Label Foreground="#333333" FontWeight="Bold" FontSize="16">Фильтры</Label>

                    <Label Foreground="#333333">Категория</Label>
                    <ComboBox x:Name="cmbCategory" 
                              Height="35"
                              FontSize="14"
                             DisplayMemberPath="Name"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              Margin="0,0,0,10"
                              SelectionChanged="CmbCategory_SelectionChanged"/>

                    <Label Foreground="#333333">Бренд</Label>
                    <ComboBox x:Name="cmbBrand"
                              Height="35"
                              FontSize="14"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"
                              SelectionChanged="CmbBrand_SelectionChanged"/>

                    <Label Foreground="#333333">Цена</Label>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="txtPriceFrom" 
                                 Width="80"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 Background="White"
                                 BorderBrush="#00C4B4"
                                 BorderThickness="1"
                                 Margin="0,0,5,0"
                                  PreviewTextInput="TxtPrice_PreviewTextInput"
                                 KeyDown="TxtPrice_KeyDown"
                                 TextChanged="TxtPriceFrom_TextChanged"/>
                                 
                                
                        <Label Foreground="#333333" VerticalAlignment="Center">до</Label>
                        <TextBox x:Name="txtPriceTo" 
                                 Width="80"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 Background="White"
                                 BorderBrush="#00C4B4"
                                 BorderThickness="1"
                                 Margin="5,0,0,0"
                                 TextChanged="TxtPriceTo_TextChanged"
                                 PreviewTextInput="TxtPrice_PreviewTextInput"
                                 KeyDown="TxtPrice_KeyDown"/>
                        
                    </StackPanel>

                    <Label Foreground="#333333" FontWeight="Bold" FontSize="16" Margin="0,10,0,0">Сортировка</Label>
                    <ComboBox x:Name="cmbSort" 
                              Height="35"
                              FontSize="14"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              Margin="0,0,0,15"
                              SelectionChanged="CmbSort_SelectionChanged">
                        <ComboBoxItem Tag="Name">По названию</ComboBoxItem>
                        <ComboBoxItem Tag="PriceAsc">По цене (возрастание)</ComboBoxItem>
                        <ComboBoxItem Tag="PriceDesc">По цене (убывание)</ComboBoxItem>
                        <ComboBoxItem Tag="StockAsc">По количеству (возрастание)</ComboBoxItem>
                        <ComboBoxItem Tag="StockDesc">По количеству (убывание)</ComboBoxItem>
                    </ComboBox>

                    <Button x:Name="btnReset" 
                            Content="Сбросить фильтры" 
                            Background="#00b4c4"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            FontSize="14"
                            Padding="10,5"
                            Margin="0,0,0,20"
                            Click="BtnReset_Click"/>

                    <Border Background="#f0f0f0"
                            Padding="10"
                            CornerRadius="5"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <Label Foreground="#333333" FontWeight="Bold" FontSize="16" Margin="0,0,0,10">Управление</Label>

                            <Button x:Name="btnAddProduct" 
                                    Content="Добавить товар"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnAddProduct_Click"/>

                            <Button x:Name="btnManageCategories" 
                                    Content="Управление категориями"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageCategories_Click"/>

                            <Button x:Name="btnManageBrands" 
                                    Content="Управление брендами"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageBrands_Click"/>

                            <Button x:Name="btnManageTags" 
                                    Content="Управление тегами"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageTags_Click"/>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5"
                Padding="15"
                Margin="5,0,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Управление товарами" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <ListView x:Name="listViewProducts" 
                          Grid.Row="1"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                         >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2" 
                                    CornerRadius="5"
                                     
                                    Padding="15"
                                    Background="White">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ffd129"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>


                                    <Grid Grid.Row="0" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"
                                                   Foreground="#00C4B4"
                                                   VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                                   Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#333333"
                                                   VerticalAlignment="Center"/>
                                    </Grid>

                                    <StackPanel Grid.Row="1" 
                                                Orientation="Horizontal"
                                                >
                                        <TextBlock Text="★"
                                                   FontSize="14"
                                                   Foreground="#FFD700"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="рейтинг "
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                        <TextBlock Text="{Binding Rating, StringFormat='{}{0:F1}'}"
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding CategoryName}" 
                                               FontSize="14"
                                               Foreground="#333333"
                                               Margin="0,15,0,15"/>

                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding Description}" 
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="#333333"
                                               Margin="0,0,0,15"/>

                                    <StackPanel Grid.Row="3"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                        <TextBlock Text="Остаток: " 
                                                    FontSize="14"
                                                   VerticalAlignment="Center"
                                                    Foreground="#333333"/>
                                        <TextBlock Text="{Binding Stock}" 
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                            <Setter Property="Foreground" Value="#ffd129"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLowStock}" Value="False">
                                                            <Setter Property="Foreground" Value="#333333"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding TagsString}" 
                                                   FontSize="13"
                                                   Foreground="#00C4B4"
                                                   FontWeight="Medium"
                                                   
                                                   VerticalAlignment="Center"/>
                                        

                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Button Content="Изменить"
                                                    Background="#00C4B4"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Height="35"
                                                    FontSize="12"
                                                    Padding="10,5"
                                                    Margin="0,0,5,0"
                                                    Tag="{Binding Id}"
                                                    Click="BtnEditProduct_Click"/>
                                            <Button Content="Удалить"
                                                    Background="#00C4B4"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Height="35"
                                                    FontSize="12"
                                                    Padding="10,5"
                                                    Tag="{Binding Id}"
                                                    Click="BtnDeleteProduct_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Grid.Row="2" 
                        Background="#00C4B4" 
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock x:Name="txtTotalCount" 
                                       FontSize="14"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       />
                            <TextBlock Text=" | " 
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="10,0"/>
                            <TextBlock x:Name="txtFilteredCount" 
                                       FontSize="14"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       />
                        </StackPanel>

                        
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>