<Page x:Class="Prakt15.VisitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Каталог товаров - Посетитель"
      Background="#dfeaeb"
      FontFamily="Segoe UI"
      Width="1007">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" 
                Background="White" 
                Margin="5,5,5,5"
                Padding="10"
                CornerRadius="5">

            <StackPanel>
                <TextBlock Text="Фильтры и сортировка" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="#00C4B4"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Поиск" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,3"/>
                <TextBox x:Name="txtSearch"
                         Height="30"
                         FontSize="14"
                         Padding="5"
                         BorderBrush="#00C4B4"
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         TextChanged="TxtSearch_TextChanged"/>
                <TextBlock Text="Категория" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,3"/>
                <ComboBox x:Name="cmbCategory" 
                          Height="30"
                         DisplayMemberPath="Name"
                          FontSize="14"
                          BorderBrush="#00C4B4"
                          BorderThickness="1"
                          Margin="0,0,0,10"
                          SelectionChanged="CmbCategory_SelectionChanged"/>
                <TextBlock Text="Бренд" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,3"/>
                <ComboBox x:Name="cmbBrand"
                          Height="30"
                          FontSize="14"
                          BorderBrush="#00C4B4"
                          BorderThickness="1"
                          Margin="0,0,0,10"
                          DisplayMemberPath="Name"
                          SelectionChanged="CmbBrand_SelectionChanged"/>
                <TextBlock Text="Цена" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,3"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="txtPriceFrom" 
                             Width="80"
                             Height="30"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#00C4B4"
                             BorderThickness="1"
                             Margin="0,0,5,0"
                             TextChanged="TxtPrice_TextChanged"
                             />
                    <TextBlock Text="до" 
                               VerticalAlignment="Center" 
                               Margin="5,0,5,0"/>
                    <TextBox x:Name="txtPriceTo" 
                             Width="80"
                             Height="30"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#00C4B4"
                             BorderThickness="1"
                             TextChanged="TxtPrice_TextChanged"
                             />
                </StackPanel>
                <TextBlock Text="Сортировка" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,3"/>
                <ComboBox x:Name="cmbSort" 
                          Height="30"
                          FontSize="14"
                          BorderBrush="#00C4B4"
                          BorderThickness="1"
                          Margin="0,0,0,15"
                          SelectionChanged="CmbSort_SelectionChanged">
                    <ComboBoxItem Tag="Name">По названию</ComboBoxItem>
                    <ComboBoxItem Tag="PriceAsc">По цене (возрастание)</ComboBoxItem>
                    <ComboBoxItem Tag="PriceDesc">По цене (убывание)</ComboBoxItem>
                    <ComboBoxItem Tag="QuantityAsc">По количеству (возрастание)</ComboBoxItem>
                    <ComboBoxItem Tag="QuantityDesc">По количеству (убывание)</ComboBoxItem>
                </ComboBox>
                <Button x:Name="btnReset" 
                        Content="Сбросить фильтры" 
                        Background="#00b4c4"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="35"
                        FontSize="14"
                        Padding="10,5"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnReset_Click"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" 
                Background="White" 
                Margin="5,5,5,5"
                Padding="15"
                CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Каталог товаров" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#00C4B4"
                           Margin="0,0,0,10"/>
                <ListView x:Name="listViewProducts" 
                          Grid.Row="1"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          BorderThickness="0"
                          Padding="0,5,0,5">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2" 
                                    Margin="0,0,0,8" 
                                    Padding="12"
                                    Background="White"
                                    CornerRadius="5">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ffd129"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Foreground="#00C4B4"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   Foreground="#333333"
                                                   VerticalAlignment="Center"/>
                                    </Grid>

                                    <StackPanel Grid.Row="1" 
                                                Orientation="Horizontal"
                                                Margin="0,0,0,4">
                                        <TextBlock Text=" ★"
                                                 FontSize="14"
                                                   Foreground="#FFD700"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="рейтинг "
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                        <TextBlock Text="{Binding Rating, StringFormat='{}{0:F1}'}"
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                     
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding CategoryName}" 
                                               FontSize="14"
                                               Foreground="#333333"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding Description}" 
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="#333333"
                                               Margin="0,0,0,6"/>

                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding TagsString}" 
                                                   FontSize="13"
                                                   Foreground="#00C4B4"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="Остаток: " 
                                                       FontSize="14"
                                                       Foreground="#333333"/>
                                            <TextBlock Text="{Binding Stock}" 
                                                       FontSize="14"
                                                       FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                <Setter Property="Foreground" Value="#ffd129"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLowStock}" Value="False">
                                                                <Setter Property="Foreground" Value="#333333"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Grid.Row="2" 
                        Background="#00C4B4" 
                        Padding="10"
                        Margin="0,10,0,0"
                        CornerRadius="5">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="txtTotalCount" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                        <TextBlock Text=" | " 
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="10,0"/>
                        <TextBlock x:Name="txtFilteredCount" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>