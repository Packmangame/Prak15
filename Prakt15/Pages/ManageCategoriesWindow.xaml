<Window x:Class="Prakt15.ManageCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление категориями"
        Height="820"
        Width="573"
        Background="#dfeaeb"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#00C4B4" 
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Управление категориями" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Добавление, редактирование и удаление категорий"
                           FontSize="12"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="White" 
                Margin="0,10,0,0"
                Padding="10"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <Label Content="Поиск категории:" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
                    <TextBox x:Name="txtSearch" 
                             Height="35"
                             FontSize="14"
                             Padding="5"
                             TextChanged="TxtSearch_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="#00C4B4"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <ListView Grid.Row="1" 
                          x:Name="lstCategories"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8"
                                    Margin="0,0,0,5"
                                    Background="#f8f8f8"
                                    CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding Products.Count, StringFormat='Товаров: {0}'}"
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="10,0">
                                        <Button Content="Изменить"
                                                Background="#00C4B4"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Width="80"
                                                Height="30"
                                                FontSize="12"
                                                Padding="5"
                                                Tag="{Binding Id}"
                                                Click="BtnEdit_Click"
                                                Margin="0,0,5,0"
                                                Cursor="Hand"/>

                                        <Button Content="Удалить"
                                                Background="#00C4B4"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Width="80"
                                                Height="30"
                                                FontSize="12"
                                                Padding="5"
                                                Tag="{Binding Id}"
                                                Click="BtnDelete_Click"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                Background="White" 
                Margin="0,10,0,0"
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <Label Content="Добавить новую категорию:" 
                       FontWeight="Bold"
                       Foreground="#333333"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtNewCategory" 
                             Grid.Column="0"
                             Height="40"
                             FontSize="16"
                             Padding="10"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="#00C4B4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#00b4c4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button Grid.Column="1" 
                            Content="ДОБАВИТЬ"
                            Background="#00b4c4"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="120"
                            Height="40"
                            FontSize="14"
                            Margin="10,0,0,0"
                            Click="BtnAdd_Click"
                            Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>